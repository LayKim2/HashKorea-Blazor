<div class="top-row px-4 d-flex justify-content-end align-items-center">
    <div class="container-fluid">
        <img src="/images/main-logo.png" style="max-width:150px; height:auto;"/>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" @onclick="ToggleSidebar" />

@* mobile sidebar menu*@
<RadzenSidebar Responsive="false" @bind-Expanded="@sidebarExpanded" style="position: absolute; z-index: 3" class="full-height">

    <RadzenStack AlignItems="Radzen.AlignItems.End" class="rz-p-2">
        <RadzenButton Icon="west" Variant="Radzen.Variant.Text" ButtonStyle="ButtonStyle.Secondary" Click="@(() => sidebarExpanded = false)" />
    </RadzenStack>

    <RadzenPanelMenu>
        @* <RadzenPanelMenuItem Text="Users" Icon="account_box" /> *@
        <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" />

        <RadzenPanelMenuItem Text="Information" Icon="info" Expanded="true">
            <RadzenPanelMenuItem Text="Tour Map" Icon="map" Path="/tour-map" />
            <RadzenPanelMenuItem Text="Korea Is" Icon="flag" Path="/korea-is" />
            <RadzenPanelMenuItem Text="Promotions" Icon="local_offer" Path="/promotions" />
        </RadzenPanelMenuItem>

        <RadzenPanelMenuItem Text="Community" Icon="forum" Expanded="true">
            <RadzenPanelMenuItem Text="Notice" Icon="announcement" Path="/notice" />
            <RadzenPanelMenuItem Text="Free Board" Icon="dashboard" Path="/free-board" />
            <RadzenPanelMenuItem Text="Q&A" Icon="question_answer" Path="/qna" />
        </RadzenPanelMenuItem>
    </RadzenPanelMenu>
    @* <div class="rz-p-4">
        Sidebar
    </div> *@
</RadzenSidebar>


@* pc sidebar menu*@
<div class="full-height pc-menu">
    <RadzenPanelMenu Class="rz-h-100">
        <RadzenPanelMenuItem Text="Home" Icon="home" Path="/" />

        <RadzenPanelMenuItem Text="Information" Icon="info" Expanded="true">
