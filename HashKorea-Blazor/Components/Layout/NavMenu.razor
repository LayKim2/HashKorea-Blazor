        <RadzenPanelMenuItem Text="Community" Icon="forum" Expanded="true">
            <RadzenPanelMenuItem Text="Notice" Icon="announcement" Path="/notice" />
            <RadzenPanelMenuItem Text="Free Board" Icon="dashboard" Path="/free-board" />
            <RadzenPanelMenuItem Text="Q&A" Icon="question_answer" Path="/qna" />
        </RadzenPanelMenuItem>
    </RadzenPanelMenu>
</div>

